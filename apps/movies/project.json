{
  "name": "movies",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/movies/src",
  "projectType": "application",
  "tags": ["scope:movies"],
  "// targets": "to see all targets run: nx show project movies --web",
  "targets": {
    "build": {
      "dependsOn": ["^build"]
    },
    "serve": {
      "dependsOn": [{ "projects": ["movies-api"], "target": "serve" }]
    },
    "deploy": {
      "dependsOn": ["build"],
      "command": "docker build -f tools/deploy/deploy.Dockerfile --build-arg='APP_NAME=movies' . -t ghcr.io/push-based/ws-nx-summer2025/ws-nx-summer2025:dev"
    },
    "preview": {
      "dependsOn": ["movies-api:serve"]
    }
  }
}
