{
  "name": "movies",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/movies/src",
  "projectType": "application",
  "tags": ["scope:movies"],
  "//targets": {
    "serve": {
      "dependsOn": [
        {
          "projects": ["movies-api"],
          "target": "serve"
        }
      ]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "docker build -f apps/movies/deploy.Dockerfile --build-arg='APP_NAME=movies' . -t ghcr.io/push-based/ws-nx-summer2025/ws-nx-summer2025:dev"
      }
    },
    "preview": {
      "dependsOn": ["movies-api:serve"]
    }
  }
}
