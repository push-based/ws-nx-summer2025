{
  "name": "movies-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/movies-api",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "cwd": "apps/movies-api",
        "command": "json-server --watch movies.json --port 3001"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "docker build -f apps/movies-api/Dockerfile --build-arg='APP_NAME=movies-api' . -t ghcr.io/push-based/ws-nx-summer2025/ws-nx-summer2025:dev"
      }
    }
  }
}
